{
  "name": "share-my-ride",
  "version": "0.1.0",
  "description": "Share your ride and get points",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "test": "npm run test:unit && npm run test:bdd && npm run test:atdd && npm run report",
    "test:unit": "cross-env NODE_PATH=. NODE_ENV=test nyc -a --silent mocha --opts test/mocha.opts.unit",
    "test:atdd": "cross-env NODE_PATH=. NODE_ENV=test mocha --exit --opts test/mocha.opts.atdd",
    "test:bdd": "cross-env NODE_PATH=. NODE_ENV=test nyc -a --silent --no-clean cucumber-js test/bdd/features -r test/bdd/steps",
    "report": "nyc report",
    "lint": "eslint --fix {src,test,config,components,pages}/**/*.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "postinstall": "next build"
  },
  "keywords": [],
  "author": "Gilles CRUCHON <gilles.cruchon@gmail.com>",
  "license": "GPL-3.0",
