    "awilix": "^3.0.9",
    "awilix-express": "^1.1.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "http-status": "^1.2.0",
    "isomorphic-unfetch": "^3.0.0",
    "joi": "^14.0.6",
    "log4js": "^3.0.6",
    "method-override": "^3.0.0",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "next": "^7.0.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-markdown": "^4.0.3",
    "structure": "^1.3.0",
    "swagger-ui-express": "^4.0.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-change": "^2.1.2",
    "cross-env": "^5.2.0",
    "cucumber": "^5.0.2",
    "dirty-chai": "^2.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-react": "^7.11.1",
    "express-status-monitor": "^1.2.3",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "request": "^2.88.0",
    "sinon": "^7.1.1",
    "supertest": "^3.3.0"
